<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_fiscal_printer.ClosePosPopup" t-inherit="point_of_sale.ClosePosPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('notes-container')]" position="before">
           <div class="bp-z-report-input">
                <input type="text" name="zReport" placeholder="Reporte Z" t-model="state.zReport" class="form-control" style="margin-bottom: 10px;"/>
           </div>
        </xpath>
        <xpath expr="//t[@t-set-slot='footer']/div" position="inside">
            <div class="d-flex gap-2">
                <div class="button btn btn-secondary" t-on-click="printZReport">
                    Reporte Z
                </div>
                <div class="button btn btn-secondary" t-on-click="printXReport">
                    Reporte X
                </div>
            </div>
        </xpath>
    </t>
</templates>
