<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_binaural_ref_bank" model="ir.ui.view">
        <field name="name">res.config.settings.binaural.ref.bank</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_ve_invoice.res_config_settings_binaural_invoice"/>
        <field name="arch" type="xml">
            <!--<xpath expr="//div[@class='col-12 col-lg-4 o_setting_box']" position="after">-->
            <!--<xpath expr="//div[contains(@class, 'col-12') and contains(@class, 'col-lg-4') and contains(@class, 'o_setting_box')]" position="after">-->
            <xpath expr="//div[hasclass('col-12', 'col-lg-4', 'o_setting_box')]" position="after">
                <div class="col-12 col-lg-4 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="ref_required"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="text-muted">
                        Activate the validation of Bank references 
                        </div>
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>
