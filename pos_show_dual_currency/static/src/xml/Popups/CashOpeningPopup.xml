<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CashOpeningPopup" t-inherit="point_of_sale.OpeningControlPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('opening-cash-section')]" position="after">
            <div class="opening-cash-section border-top pt-2 mt-2 text-danger">
                <span class="info-title">Opening cash (Ref)</span>
                <div class="d-flex w-100 gap-2 mt-1">
                    <NumericInput tModel="[state, 'openingCashUSD']" t-on-change="handleInputChangeUSD" class="'w-100 text-danger'"/>
                    <button class="button icon btn btn-secondary text-danger" t-on-click="openDetailsPopupUSD">
                        <i class="fa fa-calculator" role="img" title="Open the money details popup"/>
                    </button>
                </div>
            </div>
        </xpath>
        <xpath expr="//Dialog" position="inside">
            <MoneyDetailsPopupUSD
                    t-if="state.displayMoneyDetailsPopupUSD"
                    manualInputCashCountUSD="manualInputCashCountUSD"
                    onConfirm="(payload) => this.updateCashOpeningUSD(payload)"
                    onDiscard.bind="closeDetailsPopupUSD"
            />
        </xpath>
    </t>
</templates>
