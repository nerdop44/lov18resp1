<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('total')]" position="inside">
             <t t-if="pos.config.show_dual_currency">
                <div class="currency-dual-total" style="color: red; font-size: medium; margin-top: 5px;">
                    / <t t-esc="pos.format_currency_ref(currentOrder.getTotalDue() * pos.config.show_currency_rate)"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
