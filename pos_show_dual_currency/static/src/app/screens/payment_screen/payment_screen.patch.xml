<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.PaymentScreenDue" t-inherit="point_of_sale.PaymentScreenDue" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('total')]" position="inside">
            <t t-if="pos.config.show_dual_currency">
                <span class="total-dual" style="font-size: 0.8em; color: #dc3545; margin-left: 10px;">
                     / <t t-esc="pos.getAmountInRefCurrency(currentOrder.getTotalDue())"/>
                </span>
            </t>
        </xpath>
    </t>
</templates>
