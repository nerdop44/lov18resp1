<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.PaymentScreenPaymentLines" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-amount')]" position="inside">
            <t t-if="pos.config.show_dual_currency">
                <div class="payment-amount-dual" style="font-size: 0.8em; color: gray; margin-top: 2px;">
                    <t t-esc="pos.getAmountInRefCurrency(line.amount)"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
