<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-status-remaining')]" position="inside">
             <t t-if="pos.config.show_dual_currency">
                <div class="currency-dual-remaining" style="color: red; font-size: medium; margin-top: 5px;">
                     Remaining Ref: <t t-esc="pos.format_currency_ref(props.order.get_due() * pos.config.show_currency_rate)"/>
                </div>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('payment-status-change')]" position="inside">
             <t t-if="pos.config.show_dual_currency">
                <div class="currency-dual-change" style="color: red; font-size: medium; margin-top: 5px;">
                     Change Ref: <t t-esc="pos.format_currency_ref(props.order.get_change() * pos.config.show_currency_rate)"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
