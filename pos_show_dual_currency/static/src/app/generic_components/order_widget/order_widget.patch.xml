<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('total')]" position="inside">
             <t t-if="pos.config.show_dual_currency">
                <div class="currency-dual-total" style="color: #28a745; font-size: medium; margin-top: 5px; text-align: right;">
                     <t t-esc="totalInRefCurrency"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
