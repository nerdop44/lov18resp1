<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'order-summary')]//div[contains(@class, 'fs-2')]" position="after">
             <t t-if="pos.config.show_dual_currency and totalInRefCurrency">
                <div class="currency-dual-total" style="color: #28a745; font-size: medium; margin-top: 5px; text-align: right;">
                     <t t-esc="totalInRefCurrency"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
