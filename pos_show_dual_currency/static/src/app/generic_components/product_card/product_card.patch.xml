<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="DualCurrencyProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-price')]" position="inside">
             <t t-if="pos.config.show_dual_currency and priceInRefCurrency">
                 / <span style="color: red; font-size: 0.9em; font-weight: bold;">
                    <t t-esc="priceInRefCurrency" />
                 </span>
            </t>
        </xpath>
    </t>
</templates>
