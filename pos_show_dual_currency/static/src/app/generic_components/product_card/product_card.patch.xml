<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="DualCurrencyProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-name')]" position="after">
             <t t-if="pos.config.show_dual_currency">
                <div class="product-price-dual" style="font-size: 0.8em;">
                    <div class="product-content-name">
                        <t t-esc="props.name" />
                    </div>
                    <div class="product-price">
                        <t t-esc="price" />
                        <t t-if="priceInRefCurrency">
                             / <span style="color: red; font-size: 0.9em; font-weight: bold;">
                                <t t-esc="priceInRefCurrency" />
                             </span>
                        </t>
                    </div>
                </div>
            </t>
        </xpath>
    </t>
</templates>
