<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('price')]" position="inside">
             <t t-if="priceInRefCurrency">
                <span class="currency-dual-subtotal" style="color: red; font-size: small; margin-left: 5px;">
                    / <t t-esc="priceInRefCurrency"/>
                </span>
            </t>
        </xpath>
    </t>
</templates>
