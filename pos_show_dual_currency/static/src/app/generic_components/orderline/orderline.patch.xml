<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_dual_currency.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('price')]" position="inside">
             <t t-if="pos.config.show_dual_currency">
                <div class="currency-dual-subtotal" style="font-size: x-small; color: #28a745; margin-top: 2px;">
                    <t t-esc="priceInRefCurrency"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
