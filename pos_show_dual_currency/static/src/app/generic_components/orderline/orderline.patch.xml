<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="DualCurrencyOrderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-price')]" position="inside">
            <t t-if="priceInRefCurrency">
                <span class="dual-currency-price ms-1" style="color: red; font-size: small;">
                    / <t t-esc="priceInRefCurrency"/>
                </span>
            </t>
        </xpath>
    </t>
</templates>
