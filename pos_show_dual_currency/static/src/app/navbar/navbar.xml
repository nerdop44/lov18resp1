<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.Navbar" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-rightheader')]" position="inside">
            <div t-if="pos.config.show_dual_currency" class="pos-currency-rate d-flex align-items-center ms-3 me-3" style="font-size: 0.9em; font-weight: bold; padding: 5px 10px; border: 2px solid #714B67; background-color: white; border-radius: 5px; color: #714B67;">
                <span class="me-1">USD: </span>
                <span><t t-esc="pos.show_currency_rate_display"/></span>
            </div>
        </xpath>
    </t>
</templates>
