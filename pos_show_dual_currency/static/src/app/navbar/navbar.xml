<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.Navbar" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-centerheader')]" position="inside">
            <div t-if="pos.config.show_dual_currency" class="pos-currency-rate d-flex align-items-center ms-3" style="color: #6c757d; font-size: 0.9em; font-weight: bold; border-left: 1px solid #dee2e6; padding-left: 15px;">
                <span class="me-1">Tasa: 1 <t t-esc="pos.config.show_currency_symbol or 'USD'"/> = </span>
                <span class="text-danger"><t t-esc="pos.show_currency_rate_display"/></span>
            </div>
        </xpath>
    </t>
</templates>
