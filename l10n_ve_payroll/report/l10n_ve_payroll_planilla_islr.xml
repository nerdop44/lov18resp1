<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_comprobante_arc" model="report.paperformat">
            <field name="default" eval="True"/>
            <field name="name">A4 Comprobante ARC</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">110</field>
        </record>

        <template id="template_comprobante_arc">
           <t t-call="web.basic_layout">
                    <t t-foreach="employee_ids" t-as="emp">
                          <div class="row">
                                <div class="col-12">
                                    <div class="text-center">
                                        <h4><strong>COMPROBANTE DE RETENCIONES VARIAS ACR-V</strong></h4>
                                    </div>
                                </div>
                          </div>
                        <style>
                            table {
                                border-collapse:separate;
                                border:solid black 1px;
                                border-radius:4px;
                            }

                            td, th {
                                border-left:solid black 1px;
                                border-top:solid black 1px;
                            }

                            th {
                                border-top: none;
                            }

                            td:first-child, th:first-child {
                                 border-left: none;
                            }
                        </style>
                          <div class="row" style="margin-top: 10px;">
                                <div class="col-6" style="padding-right: 10px;">
                                    <div class="text-left" style="padding: 10px;">
                                        DATOS DEL AGENTE DE RETENCIÓN
                                    </div>
                                    <table style="width:100%; height: 50px;" >
                                        <tr>
                                            <td style="padding: 5px;">
                                                <strong>Razón social:</strong> <t t-esc="company_id.name"/> <br/>
                                                <strong>RIF:</strong> <t t-esc="company_id.vat"/><br/>
                                                <strong>Dirección fiscal:</strong> <t t-esc="company_id.street"/>, <t t-esc="company_id.city"/>, <t t-esc="company_id.state_id.name"/> <br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 5px;">
                                                <strong>Fecha de cierre del ejercicio:</strong> <t t-esc="date_to"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6" style="padding-left: 10px;">
                                    <div class="text-left" style="padding: 10px;">
                                        DATOS DEL TRABAJADOR
                                    </div>
                                    <table style="width:100%; height: 50px;">
                                        <tr>
                                            <td style="padding: 5px;">
                                                <strong>Nombre y Apellido:</strong> <t t-esc="emp.name"/><br/>
                                                <strong>CI/RIF:</strong> <t t-esc="emp.rif"/><br/>
                                                <strong>Dirección:</strong> <t t-esc="emp.address_home_id.street"/>, <t t-esc="emp.address_home_id.city"/>, <t t-esc="emp.address_home_id.state_id.name"/> <br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 5px;">
                                                <strong>Periodo:</strong> <t t-esc="date_from"/> al <t t-esc="date_to"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                          </div>
                            <br/>
                          <div style="padding: 5px;">
                              INFORMACIÓN DEL IMPUESTO RETENIDO Y ENTERADO
                          </div>
                          <table style="width:100%;">
                            <tr style="background-color: #e9e9e9;">
                                <td style="padding: 5px;" class="text-center">Período</td>
                                <td style="padding: 5px;" class="text-center">Monto Objeto de Retención</td>
                                <td style="padding: 5px;" class="text-center">Porcentaje</td>
                                <td style="padding: 5px;" class="text-center">Impuesto Retenido</td>
                                <td style="padding: 5px;" class="text-center">Monto Objeto de Retención Acumulado</td>
                                <td style="padding: 5px;" class="text-center">Impuesto Retenido Acumulado</td>
                            </tr>
                            <t t-foreach="employee_ids_lines" t-as="l">
                                <t t-if="emp.id == l['employee_id'].id">
                                    <t t-set="impuesto_retenido" t-value="0"/>
                                    <t t-foreach="l['lines']" t-as="ld">
                                        <t t-set="impuesto_retenido" t-value="impuesto_retenido + ld['impuesto_retenido_mes']"/>
                                        <tr>
                                            <td style="padding: 5px;" class="text-center"><t t-esc="ld['periodo']"/></td>
                                            <td style="padding: 5px;" class="text-end"><t t-esc="ld['monto_obj_retencion_mes']" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                            <td style="padding: 5px;" class="text-center"><t t-esc="ld['porcentaje_mes']"/> %</td>
                                            <td style="padding: 5px;" class="text-end"><t t-esc="ld['impuesto_retenido_mes']" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                            <td style="padding: 5px;" class="text-end"><t t-esc="ld['monto_obj_retencion_acumulado_mes']" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                            <td style="padding: 5px;" class="text-end"><t t-esc="ld['impuesto_retenido_acumulado_mes']" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>

                                        </tr>
                                    </t>
                                    <tr>
                                        <td style="padding: 5px;" class="text-right" colspan="3">
                                            <strong>TOTAL</strong>
                                        </td>
                                        <td style="padding: 5px;" class="text-end"><t t-esc="impuesto_retenido" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                        <td style="padding: 5px;" class="text-end" colspan="2"></td>
                                    </tr>
                                </t>
                            </t>
                          </table>
                          <div class="row" style="margin-top: 30px;">
                              <div class="col-5">
                                  <table style="width:100%;">
                                      <tr>
                                          <td style="padding: 5px;" class="text-center">
                                              AGENTE DE RETENCION (SELLO, FIRMA)
                                          </td>
                                      </tr>
                                      <tr>
                                          <td style="width: 100px; padding: 5px; color: #ffffff;">
                                              <br/><br/><br/><br/><br/>
                                          </td>
                                      </tr>
                                        <tr>
                                            <td style="padding: 5px;">
                                                <strong>Fecha de impresión:</strong> <t t-esc="time.strftime('%d/%m/%Y')"/>
                                            </td>
                                        </tr>
                                  </table>
                              </div>
                          </div>
                        <!-- salto de pagina -->
                        <div style="page-break-after:always;"></div>
                    </t>
                </t>
        </template>


        <record id="action_comprobante_arc_report" model="ir.actions.report">
            <field name="name">Comprobante de Retenciones Varias ACR-V</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_ve_payroll.template_comprobante_arc</field>
            <field name="report_file">l10n_ve_payroll.template_comprobante_arc</field>
            <field name="paperformat_id" ref="paperformat_comprobante_arc"/>
            <field name="binding_model_id" ref="model_hr_employee"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>