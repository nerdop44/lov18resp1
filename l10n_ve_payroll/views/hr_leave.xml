<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- heredar la vista hr_holidays.hr_leave_view_form -->
        <record id="hr_leave_form_inherit_views_ve" model="ir.ui.view">
            <field name="name">hr_leave_form_inherit_views_ve</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='holiday_status_id']" position="after">
                        <field name="is_vaca" invisible="1"/>
                        <field name="vaca_disponible" invisible="not employee_id or not is_vaca"/>
                        <field name="dias_a_disfrutar" invisible="not employee_id or not is_vaca"/>
                </xpath>
                <xpath expr="//field[@name='duration_display']" position="after">
                    <label for="dias_habiles" string="Días Hábiles" invisible="not is_vaca or request_unit_half or leave_type_request_unit != 'hour'"/>
                    <div name="dias_habiles" invisible="not is_vaca or request_unit_half or leave_type_request_unit != 'hour'">
                        <div invisible="not is_vaca or request_unit_half or request_unit_hours" class="o_row">
                            <field name="dias_habiles" class="oe_inline"/>
                            <span>Días</span>
                        </div>
                    </div>
                    <label for="dias_fer_desc" string="Días Feriados y Descanso" invisible="not is_vaca or request_unit_half or leave_type_request_unit != 'hour'"/>
                    <div name="dias_fer_desc" invisible="not is_vaca or request_unit_half or leave_type_request_unit != 'hour'">
                        <div invisible="not is_vaca or request_unit_half or request_unit_hours" class="o_row">
                            <field name="dias_fer_desc" class="oe_inline"/>
                            <span>Días</span>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>