<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_hr_employee_loan_form" model="ir.ui.view">
		<field name="name">view.hr.employee.loan.form</field>
		<field name="model">hr.employee.loan</field>
		<field name="arch" type="xml">
			<form string="Prestamos de Empleados">
				<header>
                    <button name="compute_installment" invisible="state != 'draft'" string="Calcular Cuotas" class="btn-primary" type="object" groups="base.group_user"/>
                    <button name="action_send_request" invisible="state != 'draft'" string="Enviar Solicitud" class="btn-primary" type="object" groups="base.group_user"/>

                    <button name="dep_manager_approval_loan" invisible="state != 'request'" string="Aprobar Solicitud" class="btn-primary"
                            type="object" groups="l10n_ve_payroll.group_department_manager"/>
                    <button name="dep_manager_reject_loan" invisible="state != 'request'" string="Rechazar Solicitud" class="btn-primary"
                            type="object" groups="l10n_ve_payroll.group_department_manager"/>

                    <button name="cancel_loan" invisible="state != 'request'" string="Cancelar" type="object"
                            groups="base.group_user"/>

                    <button name="hr_manager_approval_loan" invisible="state != 'dep_approval'" string="Confirmar" class="btn-primary"
                            type="object" groups="hr.group_hr_manager"/>
                    <button name="hr_manager_reject_loan" invisible="state != 'dep_approval'" string="Rechazar" class="btn-primary"
                            type="object" groups="hr.group_hr_manager"/>

                    <button name="paid_loan" invisible="state != 'hr_approval'" string="Desembolsar préstamo" class="btn-primary" type="object"
                            groups="hr.group_hr_manager"/>

                    <button name="set_to_draft" invisible="state != 'cancel'" string="Pasar a Borrador" class="btn-primary" type="object"
                            groups="base.group_user"/>

                    <button name="action_close_loan" string="Cerrar" class="btn-primary" type="object"
                            groups="hr.group_hr_manager" invisible="[('is_close','!=',True)]"/>

                    <button name="action_done_loan" invisible="state != 'paid'" string="Finalizar" class="btn-primary" type="object"
                            groups="hr.group_hr_manager" />

                    <button name='send_loan_detail' invisible="state != 'done'" string='Enviar Email' class="btn-primary" type="object" groups="hr.group_hr_user"/>



					<field name="state" widget="statusbar" statusbar_visible="draft,request,dep_approval,hr_approval,done"/>
				</header>
				<sheet>
                    <div class="oe_button_box" name="button_box">
                        <b><button name="view_journal_entry" type="object"  class="oe_stat_button" icon="fa-external-link" string="Asiento Contable" groups="hr.group_hr_manager" invisible="[('state','not in',['done','paid']])"/></b>
                         <button type="object"
                                        name="action_view_loan_installment"
                                        class="oe_stat_button"
                                        icon="fa-list"
                                        invisible="[('installment_count', '=', 0)]"
                                         >
                                          <field name="installment_count" string="Cuotas" widget="statinfo" />
                         </button>
                        
                    </div>
                	<label for="name" class="oe_edit_only"/>
                	<h1><field name="name" readonly="1"/></h1>
                    
                    <group>
                        <group>
                            <field name="employee_id" readonly="[('state','!=','draft')]"/>
                            <field name="department_id" readonly="[('state','!=','draft')]"/>
                            <field name="manager_id" readonly="[('state','!=','draft')]"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="job_id" readonly="[('state','!=','draft')]"/>
                            <field name="loan_url" invisible="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="hr_manager_id" invisible="1"/>
                            <field name="is_close" invisible="1"/>
                            <field name="move_id" invisible="1" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="is_apply_interest" invisible="1"/>
                            <field name="payment_method" readonly="[('state','!=','draft')]"/>
                            <field name="currency_id_dif" readonly="1"/>
                            <field name="loan_amount" readonly="[('state','!=','draft')]"/>
                            <field name="interest_amount" invisible="[('is_apply_interest','!=',True)]"/>
                            <field name="paid_amount"/>
                            <field name="remaing_amount"/>
                        </group>
                        <group>
                            <field name="loan_type_id" readonly="[('state','!=','draft')]"/>
                            <field name="start_date" readonly="[('state','!=','draft')]"/>
                            <field name="term" readonly="[('state','!=','draft')]"/>
                            <field name="period" readonly="[('state','!=','draft')]"/>
                            <field name="end_date"/>
                            <field name="interest_rate" invisible="[('is_apply_interest','!=',True)]" readonly="[('state','!=','draft')]"/>
                            <field name="interest_type" invisible="[('is_apply_interest','!=',True)]" readonly="[('state','!=','draft')]"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="installment_amount"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Razón">
                        	<br/>
                            <field name="notes" readonly="[('state','!=','draft')]"/>
                        </page>
                        <page string="Cuotas">
                            <br/>
                            <field name="installment_lines" readonly="1" >
                                <list decoration-success="is_paid == True"  decoration-muted="is_skip == True">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="amount" />
                                    <field name="interest" />
                                    <field name="installment_amt" sum="installment_amt"/>
                                    <field name="ins_interest" sum="ins_interest"/>
                                    <field name="total_installment" sum="total_installment"/>
                                    <field name="currency_id_dif" readonly="1"/>
                                    <field name="is_paid" invisible="1"/>
                                    <field name="is_skip" invisible="1"/>
                                    <button type="object" name="action_view_payslip" string="Payslip" class="btn-primary"
                                    	invisible="[('is_paid','=',False)]" groups="hr.group_hr_manager"/>
                                </list>
                            </field>
                        </page>
                         <page string="Documentos">
                            <field name="loan_document_line_ids" mode="kanban" context="{'default_loan_id': active_id,'default_employee_id':employee_id }">
<!--                               -->
                                <kanban>
                                    <field name="name"/>
			                        <field name="document"/>
			                        <field name="employee_id"/>
			                        <field name="date"/>
			                        
                                    
                                <templates>
                                
                                    <t t-name="card">
                                                <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                    <div class="oe_kanban_details">
                                                        
									                    <strong><h3><field name="sequ_name"/></h3></strong>
									                    <ul>
										                    <li><span style="color: #800000">Name : </span><field name="name"/></li>
										                    <li><span style="color: #800000">Date: </span><field name="date"/></li>
									                    </ul>
                                                    </div>
                                                </div>
                                    </t>
                            </templates>
                        </kanban>
                            </field>
                            
                        </page>
                    </notebook>
				</sheet>
                <chatter/>
			</form>
		</field>
	</record>
    <record id="view_hr_employee_loan_tree" model="ir.ui.view">
        <field name="name">view.hr.employee.loan.list</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_employee_loan_filter" model="ir.ui.view">
        <field name="name">hr.employee.loan.select</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <search string="Search Prestamos de Empleados">
            	<field name="employee_id" operator="child_of"/>
                <field name="user_id"/>
                <field name="name" string="Loan" filter_domain="[('name','ilike',self)]"/>
                <filter name='draft' string="Borrador" domain="[('state','=','draft')]" help="Draft Loan"/>
                <filter name='done' string="Hecho" domain="[('state','=','done')]" help="Done Loan"/>
                <filter name='paid' string="Pagado" domain="[('state','=','paid')]" help="Paid Loan"/>
                <filter name='hr_approval' string="Aprobado HR" domain="[('state','=','hr_approval')]"/>
                <field name="loan_type_id"/>

                <group expand="0" string="Group By">
                    <filter string="Empleados" name="employee_id" context="{'group_by':'employee_id'}"/>
                    <filter string="Manager" name="manager_id" context="{'group_by':'manager_id'}"/>
                    <filter string="Tipo" name="type" context="{'group_by':'loan_type_id'}"/>
                    <filter string="Estatus" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_view_all_loan" model="ir.actions.act_window">
            <field name="name">View Loan</field>
            <field name="res_model">hr.employee.loan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">list,form</field>
            <field name="domain"></field>
            <field name="context">{  }
            </field>
            <field name="search_view_id" ref="view_hr_employee_loan_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click here to create a new Loan.
              </p>
            </field>
        </record>

