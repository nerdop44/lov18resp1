<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="act_hr_employee_loan_list" model="ir.actions.act_window">
        <field name="res_model">hr.employee.loan</field>
        <field name="name">Préstamos</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
    </record>

    <record id="hr_employee_form_inherit_ve" model="ir.ui.view">
            <field name="name">hr_employee_form_inherit_views_ve</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="%(act_hr_employee_loan_list)d"
                        class="oe_stat_button"
                        icon="fa-credit-card"
                        type="action"
                        string='Préstamos'>
                    </button>
                </div>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']/.." position="after">
                    <h1 class="d-flex flex-row">
                        <group>
                            <group>
                                <field name="primer_nombre"/>
                                <field name="primer_apellido"/>
                            </group>
                            <group>
                                <field name="segundo_nombre"/>
                                <field name="segundo_apellido"/>
                            </group>
                        </group>
                    </h1>
                </xpath>
                <xpath expr="//field[@name='study_field']" position="replace">
                    <field name="study_field" string="Profesión" required="1"/>
                </xpath>
                <xpath expr="//field[@name='work_contact_id']" position="after">
                    <field name="nationality"/>
                    <field name="identification_id"/>
                    <field name="rif"/>
                </xpath>
                <xpath expr="//notebook/page[@name='hr_settings']" position="before">
                    <page name="hr_otros_ve" string="Otros datos">
                        <group>
                            <group>
                                <field name="islr"/>
                            </group>

                        </group>
                    </page>
                    <page name="hr_mintra_ve" string="Datos MINTRA">
                        <group>
                            <group>
                                <field name="tipo_trabajador"/>
                                <field name="ocupacion"/>
                                <field name="subproceso"/>
                                <field name="jornada"/>
                                <field name="fecha_ingreso"/>
                                <field name="sindicalizado" widget="radio" options="{'horizontal': true}"/>
                                <field name="lab_domingo" widget="radio" options="{'horizontal': true}"/>
                                <field name="prom_hora_lab"/>
                                <field name="prom_hora_extras"/>
                                <field name="prom_hora_noc"/>
                                <field name="carga_familiar"/>
                                <field name="fam_discap" widget="radio" options="{'horizontal': true}"/>
                                <field name="hijo_benf_guard"/>
                                <field name="monto_bene_guar"/>
                                <field name="mujer_embarazada" widget="radio" options="{'horizontal': true}"/>
                                <field name="tipo_sangre"/>
                                <field name="alergico_descripcion"/>
                                <field name="patologia"/>
                                <field name="tipo_discapacidad"/>
                            </group>
                            <group>
                                <field name="enfermedad" widget="radio"  options="{'horizontal': true}"/>
                                <field name="indigena" widget="radio" options="{'horizontal': true}"/>
                                <field name="discapauditiva" widget="radio" options="{'horizontal': true}"/>
                                <field name="discapvisual" widget="radio" options="{'horizontal': true}"/>
                                <field name="discapintelectual" widget="radio" options="{'horizontal': true}"/>
                                <field name="discapmental" widget="radio" options="{'horizontal': true}"/>
                                <field name="discapmusculo" widget="radio" options="{'horizontal': true}"/>
                                <field name="discapotra" widget="radio" options="{'horizontal': true}"/>
                                <field name="accidente" widget="radio" options="{'horizontal': true}"/>
                            </group>
                        </group>
                    </page>
                    <page name="dotaciones" string="Dotaciones">
                        <group>
                            <group>
                                <field name="zapatos"/>
                                <field name="camisas"/>
                                <field name="pantalon"/>
                                <field name="chemise"/>
                            </group>
                            <group></group>
                        </group>
                    </page>
                    <page name="hr_employee_family" string="Familiares">
                        <group>
                                <field name="family_ids" nolabel="1" colspan="2">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="relationship"/>
                                        <field name="documento"/>
                                        <field name="birthdate"/>
                                        <field name="edad"/>
                                        <field name="employee_id" invisible="1" context="{'default_employee_id': active_id}"/>
                                    </list>
                                </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page//group[@name='active_group']" position="after">
                    <group string="Loan" name="hr_loan">
                        <field name="loan_request"/>
                    </group>
                </xpath>
            </field>
    </record>
</odoo>
