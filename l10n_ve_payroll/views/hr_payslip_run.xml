<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_payslip_run_inherit_views" model="ir.ui.view">
            <field name="name">hr_payslip_run_inherit_views</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_open_report" class="oe_stat_button" icon="fa-book" type="object" help="Reporte" attrs="{'invisible': [('payslip_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Reporte</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]" position="after">
                    <group>
                         <group>
                            <field name="tasa_cambio" widget='monetary'></field>
                         </group>
                    </group>
                </xpath>
            </field>
         </record>
</odoo>