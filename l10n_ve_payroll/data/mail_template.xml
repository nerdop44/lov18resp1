<?xml version="1.0"?>
<odoo>
        <!--Email template -->
        <record id="dev_dep_manager_request" model="mail.template">
            <field name="name">Solicitud de Préstamo a Gerente de Departamento</field>
            <field name="email_from">{{(object.user_id.email)}}</field>
            <field name="subject">Solicitud de Préstamo {{object.name}} para {{object.employee_id.name}}</field>
            <field name="partner_to"></field>
            <field name="model_id" ref="l10n_ve_payroll.model_hr_employee_loan"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
            
            	<p>Buen día <i> <span t-esc="object.manager_id.name"/></i></p>
            	<p></p>
            	<p> Solicitud de préstamo de <b><i> <span t-esc="object.employee_id.name"/> </i></b></p>
            	<p>
            		<b>Detalle del préstamo:</b><br/>
            		<b>Tipo: </b>  <span t-esc="object.loan_type_id.name"/> <br/>
            		<b>Monto: </b> $ <span t-esc="object.loan_amount"/> <br/>
            		<b>Término: </b> <span t-esc="object.term"/><br/>
            		<b>Fecha de inicio del pago: </b> <span t-esc="object.start_date"/> <br/>
            		<b>Fecha de finalización del pago: </b> <span t-esc="object.end_date"/><br/>
            	</p>
            	
            	<p>Puede acceder al préstamo desde la siguiente URL</p>
            	<p> <span t-esc="object.loan_url"/></p>
            	
            	<b>Saludos,</b><br/>
		        <span t-esc="object.employee_id.name"/>
                ]]></field>
         </record>

        <!--Email template -->
        <record id="dev_hr_manager_request" model="mail.template">
            <field name="name">Solicitud de Préstamo a Gerente de RRHH</field>
            <field name="email_from">{{object.manager_id.work_email or ''}}</field>
            <field name="subject">Solicitud de Préstamo {{object.name}} para {{object.employee_id.name}}</field>
            <field name="partner_to"></field>
            <field name="model_id" ref="l10n_ve_payroll.model_hr_employee_loan"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[

            	<p>Para <b><i>Gerente de Recursos Humanos</i></b></p>
            	<p> Solicitud de préstamo de <b><i> <span t-esc="object.employee_id.name"/> </i></b></p>
            	<p> Solicitud de préstamo Aprobar por <b><i> <span t-esc="object.manager_id.name"/></i></b> Gerente del departamento</p>
            	<p>
            		<b>Detalle del préstamo:</b><br/>
            		<b>Tipo: </b> <span t-esc="object.loan_type_id.name"/><br/>
            		<b>Monto: </b> $ <span t-esc="object.loan_amount"/><br/>
            		<b>Término: </b> <span t-esc="object.term"/> <br/>
            		<b>Fecha de inicio del pago: </b> <span t-esc="object.start_date"/> <br/>
            		<b>Fecha de finalización del pago: </b> <span t-esc="object.end_date"/> <br/>
            	</p>

            	<p>Puede acceder al préstamo desde la siguiente URL</p>
            	<p> <span t-esc="object.loan_url"/> </p>

            	<b>Saludos,</b><br/>
            	 <span t-esc="object.manager_id.name"/> 
                ]]></field>
         </record>

        <record id="hr_manager_confirm_loan" model="mail.template">
            <field name="name">Loan Request Confirm</field>
            <field name="email_from">{{object.hr_manager_id.work_email }}</field>
            <field name="subject">Your Loan {{object.name}} Request has been Confirmed</field>
            <field name="partner_to"></field>
            <field name="model_id" ref="l10n_ve_payroll.model_hr_employee_loan"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[

            	<p>Dear <i> <span t-esc="object.employee_id.name"/></i></p>
            	<p></p>
            	<p> Your Loan <b><i><span t-esc="object.name"/> </i></b> Request Confirm By <b><i> <span t-esc="object.hr_manager_id.name"/> </i></b></p>

            	<p>You can access Loan From Bellow URL</p>
            	<p> <span t-esc="object.loan_url"/> </p>

            	<b>Regards,</b><br/>
		<span t-esc="object.hr_manager_id.name"/>
                ]]></field>
         </record>

