<?xml version='1.0' encoding='UTF-8'?>
<odoo>
        <!-- vista formulario para el modelo hr.payslip.wizard.txt_faov -->
        <record model="ir.ui.view" id="hr_payslip_wizard_faov_form_view">
            <field name="name">hr.payslip.wizard.faov.form</field>
            <field name="model">hr.payslip.wizard.faov</field>
            <field name="arch" type="xml">
                <form string="Aportes y Retenciones FAOV">
                    <group>
                        <group>
                            <field name="type" widget="radio" options="{'horizontal': True}"/>
                            <field name="structure_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True, 'no_open': True}"/>
                            <field name="rule_employee_integral_ids" widget="many2many_tags" domain="[('struct_id', 'in', structure_ids)]" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True, 'no_open': True}"/>
                            <field name="rule_employee_retenido_ids" invisible="[('type', '!=', 'report')]" widget="many2many_tags" domain="[('struct_id', 'in', structure_ids)]" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True, 'no_open': True}"/>
                            <field name="rule_company_aporte_ids" invisible="[('type', '!=', 'report')]" widget="many2many_tags" domain="[('struct_id', 'in', structure_ids)]" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True, 'no_open': True}"/>
                            <field name="nro_cuenta_faov" invisible="[('type', '!=', 'txt')]"/>
                            <field name="company_id" groups="base.group_multi_company" string="CompaÃ±ia" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <div class="oe_left">
                            <button string="Generar Reporte" name="generar_reporte" type="object"  class="oe_highlight" invisible="[('type', '!=', 'report')]" />
                            <button string="Generar TXT" name="generar_txt" type="object"  class="oe_highlight" invisible="[('type', '!=', 'txt')]" />
                            <button string="Cancelar" special="cancel" type="object" class="oe_link" />
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_payslip_wizard_faov_action" model="ir.actions.act_window">
            <field name="name">Aportes y Retenciones FAOV</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payslip.wizard.faov</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_payslip_wizard_faov_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_hr_payslip_wizard_faov_payroll"
            name="Aportes y Retenciones FAOV"
            parent="menu_venezuela_payrol_reporting"
            action="hr_payslip_wizard_faov_action"
            sequence="31"/>

</odoo>