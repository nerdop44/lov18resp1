
<odoo>
  <data>
        <!-- Reporte CON sello y firma (por defecto) -->
        <record id="retention_voucher_action" model="ir.actions.report">
            <field name="name">Comprobante Retención (Con Sello y Firma)</field>
            <field name="model">account.retention</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_ve_payment_extension.retention_voucher_template</field>
            <field name="report_file">l10n_ve_payment_extension.retention_voucher_template</field>
            <field name="print_report_name">(object.number)</field>
            <field name="paperformat_id" ref="l10n_ve_payment_extension.paper_format_retention_iva_voucher"/>
            <field name="binding_model_id" ref="model_account_retention"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Reporte SIN sello ni firma -->
        <record id="retention_voucher_clean_action" model="ir.actions.report">
            <field name="name">Comprobante Retención (Sin Sello/Firma)</field>
            <field name="model">account.retention</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_ve_payment_extension.retention_voucher_template_clean</field>
            <field name="report_file">l10n_ve_payment_extension.retention_voucher_template_clean</field>
            <field name="print_report_name">(object.number + '_sin_firma')</field>
            <field name="paperformat_id" ref="l10n_ve_payment_extension.paper_format_retention_iva_voucher"/>
            <field name="binding_model_id" ref="model_account_retention"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
