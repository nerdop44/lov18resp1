<odoo>

	<record id="view_company_form" model="ir.ui.view">
		<field name="name">binaural.payment.extensionres.company.form</field>
		<field name="model">res.company</field>
		<field name="inherit_id" ref="base.view_company_form" />
		<field name="arch" type="xml">

			<notebook position="inside">
				<page string="Retenciones y Firmas" name="tax_authorities_data">
					<group>
						<group string="Datos de Autoridad Fiscal">
							<field name="tax_authorities_name"/>
							<field name="economic_activity_number"/>
						</group>
						<group string="Logo de Autoridad">
							<field name="tax_authorities_logo" widget="image" class="oe_avatar"/>
						</group>
					</group>
					<group string="Firmas y Sellos Digitales">
						<group>
							<field name="signature_image" widget="image" options="{'size': [180, 180]}"/>
						</group>
						<group>
							<field name="stamp_image" widget="image" options="{'size': [180, 180]}"/>
						</group>
					</group>
				</page>
			</notebook>

		</field>
	</record>
    
</odoo>
