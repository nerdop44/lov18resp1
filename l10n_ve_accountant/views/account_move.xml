    <record id="view_account_move_form_binaural_invoice" model="ir.ui.view">
        <field name="name">view.account.move.form.binaural.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/> <!-- Heredando de la vista de formulario del modelo account.move -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="inside">
                <list>
                    <field name="product_id" optional="show"/> <!-- Mostrar el campo de producto -->
                    <field name="quantity" optional="show"/> <!-- Mostrar el campo de cantidad -->
                    <field name="account_id" optional="show"/> <!-- Mostrar el campo de cuenta contable -->
                    <field name="price_unit" optional="show"/> <!-- Mostrar el campo de precio unitario -->
                    <field name="price_subtotal" optional="show"/> <!-- Mostrar el campo de subtotal -->
                    <field name="foreign_currency_id" column_invisible="True"/>
                    <field name="foreign_debit" optional="show" sum="Total Foreign Debit" readonly="1"/>
                    <field name="foreign_credit" optional="show" sum="Total Foreign Credit" readonly="1"/>
                    <field name="foreign_debit_adjustment" optional="hide"/>
                    <field name="foreign_credit_adjustment" optional="hide"/>
                    <field name="foreign_balance" optional="hide" groups="base.group_no_one"/>
                    <field name="foreign_rate" optional="hide" groups="base.group_no_one"/>
                    <field name="foreign_inverse_rate" groups="base.group_no_one" optional="hide" readonly="1"/>
                </list>
            </xpath>
        </field>
    </record>
</odoo>
