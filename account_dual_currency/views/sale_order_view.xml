<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_dual_currency" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.dual_currency</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="currency_id_dif" invisible="1"/>
                    <field name="tasa_referencial" readonly="1" force_save="1"/>
                    <field name="intervalo_tasa" invisible="1"/>
                </xpath>
                <xpath expr="//group[@name='sale_total']" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total_ref">
                        <field name="amount_untaxed_dif" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
                        <field name="amount_tax_dif" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="amount_total_dif"/>
                        </div>
                        <field name="amount_total_dif" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
