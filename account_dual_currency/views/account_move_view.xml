<odoo>
    <record id="account_move_form_inherit_v23" model="ir.ui.view">
        <field name="name">account.move.form.inherit.v23</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <!-- Campos Técnicos Invisibles - Agregados al final del sheet para evitar desplazamientos -->
            <xpath expr="//sheet" position="inside">
                <field name="verificar_pagos" invisible="1"/>
                <field name="same_currency" invisible="1"/>
                <field name="edit_trm" invisible="1"/>
                <field name="currency_id_dif" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="currency_vef_id" invisible="1"/>
            </xpath>

            <!-- Bloque de Tasa: Bajo el Diario -->
            <xpath expr="//field[@name='journal_id']" position="after">
                <label for="tax_today" string="Tasa de creación"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')"/>
                <div class="d-flex align-items-center gap-2"
                     invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')">
                    <field name="tax_today" nolabel="1" readonly="not tax_today_edited" force_save="1"/>
                    <span class="text-muted small">Cambio manual</span>
                    <field name="tax_today_edited" nolabel="1" widget="boolean_toggle"/>
                </div>
                <field name="acuerdo_moneda" string="Factura en Bs. Fijo"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')"/>
            </xpath>

            <!-- Líneas de Factura: Precio y Subtotal en USD -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_unit']" position="after">
                <field name="price_unit_usd" string="Precio $" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']" position="after">
                 <field name="price_subtotal_usd" string="Subtotal $" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
            </xpath>

            <!-- Apuntes Contables: Débito/Crédito USD -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='credit']" position="after">
                <field name="tax_today" invisible="1"/>
                <field name="debit_usd" sum="Total $" widget='monetary' options="{'currency_field': 'currency_id_dif'}" invisible="display_type in ('line_section', 'line_note')"/>
                <field name="credit_usd" sum="Total $" widget='monetary' options="{'currency_field': 'currency_id_dif'}" invisible="display_type in ('line_section', 'line_note')"/>
            </xpath>

            <!-- Ocultar Totales Estándar -->
            <xpath expr="//field[@name='tax_totals']" position="attributes">
                <attribute name="invisible">move_type in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')</attribute>
            </xpath>

            <!-- Panel de Totales: Diseño Side-by-Side (USD a la izquierda, Bs. a la derecha) -->
            <xpath expr="//field[@name='tax_totals']" position="before">
                <div class="d-flex gap-4 justify-content-end mb-3"
                     invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')">
                    
                    <!-- Columna USD (Referencia) -->
                    <group class="oe_subtotal_footer">
                        <field name="amount_untaxed_usd" string="Base Ref. ($)" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
                        <field name="amount_tax_usd" string="IVA Ref. ($)" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
                        <field name="amount_total_usd" string="Total Ref. ($)" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id_dif'}"/>
                        <field name="amount_residual_usd" string="Saldo Ref. ($)" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id_dif'}" invisible="state == 'draft'"/>
                    </group>

                    <!-- Columna Bolívares (Bs.) -->
                    <group class="oe_subtotal_footer">
                        <field name="amount_untaxed_bs" string="Base Bs." widget='monetary' options="{'currency_field': 'currency_vef_id'}"/>
                        <field name="amount_tax_bs" string="IVA Bs." widget='monetary' options="{'currency_field': 'currency_vef_id'}"/>
                        <field name="amount_total_bs" string="Total Bs." class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_vef_id'}"/>
                    </group>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Vista Lista de Facturas -->
    <record id="account_move_tree_inherit_v23" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.v23</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_in_currency_signed']" position="after">
                <field name="currency_id_dif" readonly="1" invisible="1"/>
                <field name="amount_total_usd" sum="Total Ref." optional="show" widget="monetary" options="{'currency_field': 'currency_id_dif'}"/>
                <field name="amount_residual_usd" sum="Saldo Ref." optional="show" widget="monetary" options="{'currency_field': 'currency_id_dif'}"/>
            </xpath>
            <xpath expr="//field[@name='amount_total_in_currency_signed']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Asiento Retención IGTF -->
    <record id="account_move_form_inherit_igtf_v23" model="ir.ui.view">
        <field name="name">account.move.form.inherit.igtf.v23</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="move_igtf_id" readonly="1" force_save="1" invisible="not move_igtf_id"/>
                <button name="generar_retencion_igtf" type="object" string="Generar IGTF" 
                        invisible="move_igtf_id or state != 'posted'" class="btn btn-secondary btn-sm mb-2 d-block"/>
            </xpath>
        </field>
    </record>
</odoo>
